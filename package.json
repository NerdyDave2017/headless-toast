{
  "name": "headless-toast",
  "version": "0.1.0",
  "description": "A headless toast component for React. Allows users use their own custom elements and styling/",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/styles.css": "./dist/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NerdyDave2017/headless-toast"
  },
  "scripts": {
    "build": "tsup src/index.tsx && cp src/styles.css dist/styles.css",
    "dev": "tsup src/index.tsx --watch"
  },
  "keywords": [
    "react",
    "notifications",
    "toast",
    "headless",
    "message",
    "sonner"
  ],
  "author": "mideseniordev",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.11.0"
}
